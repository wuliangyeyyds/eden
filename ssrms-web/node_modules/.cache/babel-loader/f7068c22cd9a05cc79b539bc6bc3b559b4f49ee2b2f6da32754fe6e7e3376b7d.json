{"ast":null,"code":"import \"core-js/modules/es.json.stringify.js\";\nimport { ElMessage } from 'element-plus';\nexport default {\n  name: 'LoginRegister',\n  data() {\n    return {\n      mode: 'login',\n      // 'login' 或 'register'\n      loginForm: {\n        account: '',\n        password: '',\n        role: 'student',\n        remember: true\n      },\n      registerForm: {\n        account: '',\n        studentNo: '',\n        name: '',\n        password: '',\n        confirmPassword: '',\n        role: 'student',\n        agree: false\n      },\n      showAgreement: false,\n      registerErrors: {\n        account: '',\n        confirmPassword: ''\n      },\n      accountTimer: null\n    };\n  },\n  computed: {\n    isLogin() {\n      return this.mode === 'login';\n    }\n  },\n  methods: {\n    toast(type, msg) {\n      ElMessage({\n        type,\n        message: msg\n      });\n    },\n    // ✅ 补齐：切换登录/注册\n    switchMode(next) {\n      this.mode = next;\n    },\n    // ✅ 补齐：忘记密码（先占位）\n    handleForgot() {\n      this.toast('info', '忘记密码功能暂未实现，请联系管理员重置密码');\n    },\n    // ✅ 补齐：用户协议弹窗控制\n    handleShowAgreement() {\n      this.showAgreement = true;\n    },\n    closeAgreement() {\n      this.showAgreement = false;\n    },\n    agreeAndClose() {\n      this.registerForm.agree = true;\n      this.showAgreement = false;\n    },\n    async handleLogin() {\n      if (!this.loginForm.account || !this.loginForm.password) {\n        this.toast('warning', '请填写账号和密码');\n        return;\n      }\n      const roleStr = this.loginForm.role || 'student';\n      try {\n        const http = this.$axios;\n        const resp = await http.post('http://localhost:8090/auth/login', {\n          accountNo: this.loginForm.account,\n          password: this.loginForm.password,\n          role: roleStr\n        });\n        const r = resp.data;\n        if (!r || r.code !== 200) {\n          this.toast('error', r && r.message || '登录失败');\n          return;\n        }\n        const token = r.data && r.data.token;\n        const user = r.data && r.data.user ? r.data.user : {};\n\n        // ✅ 关键：保证 roleId 存在（0 管理员 / 1 学生）\n        const roleId = user.roleId !== undefined && user.roleId !== null ? user.roleId : user.role === 'admin' || roleStr === 'admin' ? 0 : 1;\n        const storeUser = {\n          ...user,\n          roleId\n        };\n\n        // 先统一写 localStorage（因为你的路由守卫目前只读 localStorage）\n        localStorage.setItem('ssrmsUser', JSON.stringify(storeUser));\n        if (token) localStorage.setItem('ssrmsToken', token);\n        this.toast('success', '登录成功');\n        const redirect = this.$route?.query?.redirect;\n        if (redirect) this.$router.replace(redirect);else this.$router.replace(roleId === 0 ? '/admin' : '/user');\n      } catch (e) {\n        this.toast('error', e?.response?.data?.message || '登录请求失败，请检查后端是否启动/端口是否正确');\n      }\n    },\n    // 注册先不实现：保留 UI + 提示\n    handleRegister() {\n      this.toast('info', '注册功能暂未接入后端接口，后续再实现');\n    },\n    scheduleCheckAccount() {\n      clearTimeout(this.accountTimer);\n      this.accountTimer = setTimeout(() => {\n        this.checkAccountExists();\n      }, 350);\n    },\n    async checkAccountExists() {\n      const acc = (this.registerForm.account || '').trim();\n      if (!acc) {\n        this.registerErrors.account = '';\n        return;\n      }\n      try {\n        const res = await this.$axios.get('/user/check-account', {\n          params: {\n            account: acc\n          }\n        });\n        const exists = res?.data?.data === true;\n        this.registerErrors.account = exists ? '该账号已存在' : '';\n      } catch (e) {\n        // 查重失败不强行阻止，但可以提示\n        this.registerErrors.account = '';\n      }\n    },\n    checkPasswordMatch() {\n      const p1 = this.registerForm.password || '';\n      const p2 = this.registerForm.confirmPassword || '';\n      if (!p2) {\n        this.registerErrors.confirmPassword = '';\n        return;\n      }\n      this.registerErrors.confirmPassword = p1 !== p2 ? '密码不同' : '';\n    }\n  }\n};","map":{"version":3,"names":["ElMessage","name","data","mode","loginForm","account","password","role","remember","registerForm","studentNo","confirmPassword","agree","showAgreement","registerErrors","accountTimer","computed","isLogin","methods","toast","type","msg","message","switchMode","next","handleForgot","handleShowAgreement","closeAgreement","agreeAndClose","handleLogin","roleStr","http","$axios","resp","post","accountNo","r","code","token","user","roleId","undefined","storeUser","localStorage","setItem","JSON","stringify","redirect","$route","query","$router","replace","e","response","handleRegister","scheduleCheckAccount","clearTimeout","setTimeout","checkAccountExists","acc","trim","res","get","params","exists","checkPasswordMatch","p1","p2"],"sources":["D:\\code\\SpringBoot-Vue-SSRMS\\ssrms-web\\src\\components\\LoginRegister.vue"],"sourcesContent":["<template>\r\n  <!-- ✅ 作为整页使用：加一层全屏居中容器 -->\r\n  <div class=\"login-page\">\r\n    <!-- 这一层就是中间的白色大卡片内部结构，左右两边布局不变 -->\r\n    <div class=\"auth-wrapper\">\r\n      <!-- 左侧：登录/注册表单 -->\r\n      <div class=\"auth-left\">\r\n        <!-- 顶部 logo -->\r\n        <div class=\"auth-logo-row\">\r\n          <div class=\"logo-icon\">\r\n            <span class=\"logo-initial\">自</span>\r\n          </div>\r\n          <div class=\"logo-text\">\r\n            <div class=\"logo-title\">自习室预约系统</div>\r\n            <div class=\"logo-subtitle\">Study Room Reservation</div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"auth-card\">\r\n          <!-- 登录 / 注册 切换按钮 -->\r\n          <div class=\"mode-toggle\">\r\n            <button\r\n                type=\"button\"\r\n                class=\"mode-btn\"\r\n                :class=\"{ active: isLogin }\"\r\n                @click=\"switchMode('login')\"\r\n            >\r\n              登录\r\n            </button>\r\n            <button\r\n                type=\"button\"\r\n                class=\"mode-btn\"\r\n                :class=\"{ active: !isLogin }\"\r\n                @click=\"switchMode('register')\"\r\n            >\r\n              注册\r\n            </button>\r\n          </div>\r\n\r\n          <h1 class=\"auth-title\">\r\n            {{ isLogin ? '欢迎回来' : '欢迎加入' }}\r\n          </h1>\r\n          <p class=\"auth-desc\">\r\n            {{\r\n              isLogin\r\n                  ? '登录到您的账号，开始管理自习预约。'\r\n                  : '填写以下信息，完成自习室预约系统的账号注册。'\r\n            }}\r\n          </p>\r\n\r\n          <!-- 登录表单 -->\r\n          <form v-if=\"isLogin\" class=\"auth-form\" @submit.prevent=\"handleLogin\">\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">账号（学号 / 工号）</label>\r\n              <input\r\n                  v-model=\"loginForm.account\"\r\n                  class=\"form-input\"\r\n                  type=\"text\"\r\n                  placeholder=\"请输入学号或工号\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">密码</label>\r\n              <input\r\n                  v-model=\"loginForm.password\"\r\n                  class=\"form-input\"\r\n                  type=\"password\"\r\n                  placeholder=\"请输入密码\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group form-inline\">\r\n              <span class=\"form-label-inline\">登录身份</span>\r\n              <label class=\"radio-label\">\r\n                <input\r\n                    type=\"radio\"\r\n                    value=\"student\"\r\n                    v-model=\"loginForm.role\"\r\n                />\r\n                学生用户\r\n              </label>\r\n              <label class=\"radio-label\">\r\n                <input\r\n                    type=\"radio\"\r\n                    value=\"admin\"\r\n                    v-model=\"loginForm.role\"\r\n                />\r\n                管理员\r\n              </label>\r\n            </div>\r\n\r\n            <div class=\"form-helper\">\r\n              <label class=\"check-label\">\r\n                <input type=\"checkbox\" v-model=\"loginForm.remember\" />\r\n                记住登录状态\r\n              </label>\r\n              <button\r\n                  type=\"button\"\r\n                  class=\"link-btn\"\r\n                  @click.prevent=\"handleForgot\"\r\n              >\r\n                忘记密码？\r\n              </button>\r\n            </div>\r\n\r\n            <button type=\"submit\" class=\"primary-btn\">\r\n              登录\r\n            </button>\r\n\r\n            <div class=\"bottom-tip\">\r\n              还没有账号？\r\n              <button\r\n                  type=\"button\"\r\n                  class=\"link-btn\"\r\n                  @click=\"switchMode('register')\"\r\n              >\r\n                立即注册\r\n              </button>\r\n            </div>\r\n          </form>\r\n\r\n          <!-- 注册表单 -->\r\n          <form v-else class=\"auth-form\" @submit.prevent=\"handleRegister\">\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">账号</label>\r\n              <input\r\n                  v-model=\"registerForm.account\"\r\n                  class=\"form-input\"\r\n                  type=\"text\"\r\n                  placeholder=\"请输入账号（用于登录）\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">学号</label>\r\n              <input\r\n                  v-model=\"registerForm.studentNo\"\r\n                  class=\"form-input\"\r\n                  type=\"text\"\r\n                  placeholder=\"请输入学号\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">姓名</label>\r\n              <input\r\n                  v-model=\"registerForm.name\"\r\n                  class=\"form-input\"\r\n                  type=\"text\"\r\n                  placeholder=\"请输入姓名\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">设置密码</label>\r\n              <input\r\n                  v-model=\"registerForm.password\"\r\n                  class=\"form-input\"\r\n                  type=\"password\"\r\n                  placeholder=\"请输入密码\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label class=\"form-label\">确认密码</label>\r\n              <input\r\n                  v-model=\"registerForm.confirmPassword\"\r\n                  class=\"form-input\"\r\n                  type=\"password\"\r\n                  placeholder=\"请再次输入密码\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-group form-inline\">\r\n              <span class=\"form-label-inline\">注册身份</span>\r\n              <label class=\"radio-label\">\r\n                <input type=\"radio\" value=\"student\" v-model=\"registerForm.role\" />\r\n                学生用户\r\n              </label>\r\n              <label class=\"radio-label\">\r\n                <input type=\"radio\" value=\"admin\" v-model=\"registerForm.role\" />\r\n                管理员\r\n              </label>\r\n            </div>\r\n\r\n            <div class=\"form-helper\">\r\n              <label class=\"check-label\">\r\n                <input type=\"checkbox\" v-model=\"registerForm.agree\" />\r\n                已阅读并同意\r\n                <button type=\"button\" class=\"link-btn\" @click.prevent=\"handleShowAgreement\">\r\n                  《用户协议》\r\n                </button>\r\n              </label>\r\n            </div>\r\n\r\n            <button type=\"submit\" class=\"primary-btn\">注册</button>\r\n\r\n            <div class=\"bottom-tip\">\r\n              已有账号？\r\n              <button type=\"button\" class=\"link-btn\" @click=\"switchMode('login')\">\r\n                直接登录\r\n              </button>\r\n            </div>\r\n          </form>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 右侧：品牌 / 文案区域 -->\r\n      <div class=\"auth-right\">\r\n        <div class=\"slogan-block\">\r\n          <h2 class=\"slogan-title\">预约自习室的最佳通用解决方案</h2>\r\n          <p class=\"slogan-desc\">\r\n            统一的自习室预约平台，让学生轻松选座，管理员高效管理场地和预约。\r\n          </p>\r\n          <ul class=\"slogan-list\">\r\n            <li>· 支持多校区、多楼栋、多自习室统一管理</li>\r\n            <li>· 支持预约、签到、违约处理与信用分统计</li>\r\n            <li>· 预留 API 接口，方便与学校现有系统对接</li>\r\n          </ul>\r\n          <div class=\"slogan-sign\">—— SSRMS</div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 用户协议弹窗 -->\r\n      <div v-if=\"showAgreement\" class=\"agreement-mask\" @click.self=\"closeAgreement\">\r\n        <div class=\"agreement-dialog\">\r\n          <div class=\"agreement-header\">\r\n            <h3 class=\"agreement-title\">自习室预约系统用户协议</h3>\r\n            <button class=\"agreement-close\" type=\"button\" @click=\"closeAgreement\">\r\n              ×\r\n            </button>\r\n          </div>\r\n          <div class=\"agreement-body\">\r\n            <div class=\"agreement-scroll\">\r\n              <!-- 这里保持你原来的协议内容不变（略） -->\r\n              <p>欢迎使用自习室预约系统（以下简称“本系统”）……</p>\r\n            </div>\r\n          </div>\r\n          <div class=\"agreement-footer\">\r\n            <button type=\"button\" class=\"primary-btn primary-btn-small\" @click=\"agreeAndClose\">\r\n              我已阅读并同意\r\n            </button>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ElMessage } from 'element-plus'\r\n\r\nexport default {\r\n  name: 'LoginRegister',\r\n  data () {\r\n    return {\r\n      mode: 'login', // 'login' 或 'register'\r\n      loginForm: {\r\n        account: '',\r\n        password: '',\r\n        role: 'student',\r\n        remember: true\r\n      },\r\n      registerForm: {\r\n        account: '',\r\n        studentNo: '',\r\n        name: '',\r\n        password: '',\r\n        confirmPassword: '',\r\n        role: 'student',\r\n        agree: false\r\n      },\r\n      showAgreement: false,\r\n      registerErrors: {\r\n        account: '',\r\n        confirmPassword: ''\r\n      },\r\n      accountTimer: null,\r\n    }\r\n  },\r\n  computed: {\r\n    isLogin () {\r\n      return this.mode === 'login'\r\n    }\r\n  },\r\n  methods: {\r\n    toast (type, msg) {\r\n      ElMessage({ type, message: msg })\r\n    },\r\n\r\n    // ✅ 补齐：切换登录/注册\r\n    switchMode (next) {\r\n      this.mode = next\r\n    },\r\n\r\n    // ✅ 补齐：忘记密码（先占位）\r\n    handleForgot () {\r\n      this.toast('info', '忘记密码功能暂未实现，请联系管理员重置密码')\r\n    },\r\n\r\n    // ✅ 补齐：用户协议弹窗控制\r\n    handleShowAgreement () {\r\n      this.showAgreement = true\r\n    },\r\n    closeAgreement () {\r\n      this.showAgreement = false\r\n    },\r\n    agreeAndClose () {\r\n      this.registerForm.agree = true\r\n      this.showAgreement = false\r\n    },\r\n\r\n    async handleLogin () {\r\n      if (!this.loginForm.account || !this.loginForm.password) {\r\n        this.toast('warning', '请填写账号和密码')\r\n        return\r\n      }\r\n\r\n      const roleStr = this.loginForm.role || 'student'\r\n\r\n      try {\r\n        const http = this.$axios\r\n        const resp = await http.post('http://localhost:8090/auth/login', {\r\n          accountNo: this.loginForm.account,\r\n          password: this.loginForm.password,\r\n          role: roleStr\r\n        })\r\n\r\n        const r = resp.data\r\n        if (!r || r.code !== 200) {\r\n          this.toast('error', (r && r.message) || '登录失败')\r\n          return\r\n        }\r\n\r\n        const token = r.data && r.data.token\r\n        const user = (r.data && r.data.user) ? r.data.user : {}\r\n\r\n        // ✅ 关键：保证 roleId 存在（0 管理员 / 1 学生）\r\n        const roleId = (user.roleId !== undefined && user.roleId !== null)\r\n            ? user.roleId\r\n            : ((user.role === 'admin' || roleStr === 'admin') ? 0 : 1)\r\n\r\n        const storeUser = { ...user, roleId }\r\n\r\n        // 先统一写 localStorage（因为你的路由守卫目前只读 localStorage）\r\n        localStorage.setItem('ssrmsUser', JSON.stringify(storeUser))\r\n        if (token) localStorage.setItem('ssrmsToken', token)\r\n\r\n        this.toast('success', '登录成功')\r\n\r\n        const redirect = this.$route?.query?.redirect\r\n        if (redirect) this.$router.replace(redirect)\r\n        else this.$router.replace(roleId === 0 ? '/admin' : '/user')\r\n      } catch (e) {\r\n        this.toast('error', e?.response?.data?.message || '登录请求失败，请检查后端是否启动/端口是否正确')\r\n      }\r\n    },\r\n\r\n    // 注册先不实现：保留 UI + 提示\r\n    handleRegister () {\r\n      this.toast('info', '注册功能暂未接入后端接口，后续再实现')\r\n    },\r\n\r\n    scheduleCheckAccount () {\r\n      clearTimeout(this.accountTimer)\r\n      this.accountTimer = setTimeout(() => {\r\n        this.checkAccountExists()\r\n      }, 350)\r\n    },\r\n\r\n    async checkAccountExists () {\r\n      const acc = (this.registerForm.account || '').trim()\r\n      if (!acc) {\r\n        this.registerErrors.account = ''\r\n        return\r\n      }\r\n      try {\r\n        const res = await this.$axios.get('/user/check-account', { params: { account: acc } })\r\n        const exists = res?.data?.data === true\r\n        this.registerErrors.account = exists ? '该账号已存在' : ''\r\n      } catch (e) {\r\n        // 查重失败不强行阻止，但可以提示\r\n        this.registerErrors.account = ''\r\n      }\r\n    },\r\n\r\n    checkPasswordMatch () {\r\n      const p1 = this.registerForm.password || ''\r\n      const p2 = this.registerForm.confirmPassword || ''\r\n      if (!p2) {\r\n        this.registerErrors.confirmPassword = ''\r\n        return\r\n      }\r\n      this.registerErrors.confirmPassword = (p1 !== p2) ? '密码不同' : ''\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n\r\n/* ✅ 整页居中（否则卡片会贴左上角） */\r\n.login-page {\r\n  min-height: 100vh;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  padding: 40px 16px;\r\n}\r\n\r\n/* 中间大卡片：宽度限制、圆角和阴影 */\r\n.auth-wrapper {\r\n  display: flex;\r\n  width: 1040px;\r\n  max-width: 96vw;\r\n  min-height: 540px;\r\n  max-height: calc(100vh - 80px);\r\n  border-radius: 26px;\r\n  overflow: hidden;\r\n  background-color: #ffffff;\r\n  box-shadow: 0 30px 80px rgba(15, 23, 42, 0.35);\r\n}\r\n\r\n/* 左侧区域 */\r\n.auth-left {\r\n  flex: 1;\r\n  background-color: #f9fafb;\r\n  display: flex;\r\n  flex-direction: column;\r\n  padding: 40px 56px;\r\n  overflow-y: auto;\r\n}\r\n\r\n/* 左侧滚动条样式（可选） */\r\n.auth-left::-webkit-scrollbar {\r\n  width: 6px;\r\n}\r\n.auth-left::-webkit-scrollbar-thumb {\r\n  background-color: rgba(148, 163, 184, 0.7);\r\n  border-radius: 999px;\r\n}\r\n.auth-left::-webkit-scrollbar-track {\r\n  background-color: transparent;\r\n}\r\n\r\n.auth-logo-row {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-bottom: 32px;\r\n}\r\n\r\n.logo-icon {\r\n  width: 44px;\r\n  height: 44px;\r\n  border-radius: 14px;\r\n  background: #2563eb;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  color: #ffffff;\r\n  font-weight: 600;\r\n  font-size: 20px;\r\n  box-shadow: 0 10px 25px rgba(37, 99, 235, 0.4);\r\n}\r\n\r\n.logo-initial {\r\n  transform: translateY(1px);\r\n}\r\n\r\n.logo-text {\r\n  margin-left: 12px;\r\n}\r\n\r\n.logo-title {\r\n  font-size: 18px;\r\n  font-weight: 600;\r\n  color: #111827;\r\n}\r\n\r\n.logo-subtitle {\r\n  font-size: 12px;\r\n  color: #9ca3af;\r\n}\r\n\r\n.auth-card {\r\n  max-width: 420px;\r\n}\r\n\r\n/* 登录/注册 切换 */\r\n.mode-toggle {\r\n  display: inline-flex;\r\n  padding: 4px;\r\n  border-radius: 999px;\r\n  background-color: rgba(15, 23, 42, 0.04);\r\n  margin-bottom: 12px;\r\n}\r\n\r\n.mode-btn {\r\n  border: none;\r\n  background: transparent;\r\n  padding: 6px 22px;\r\n  border-radius: 999px;\r\n  font-size: 13px;\r\n  color: #6b7280;\r\n  cursor: pointer;\r\n  transition: all 0.15s ease;\r\n}\r\n\r\n.mode-btn.active {\r\n  back